@page "/CategoryPage"
@using ValhallaVaultCyberAwareness.Client.Services
@using ValhallaVaultCyberAwareness.Domain.Models
@inject ICategoryService CategoryService
@inject NavigationManager NavigationManager

<h3>All Categories</h3>

@if (categories == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in categories)
            {
                <tr>
                    <td>@category.Id</td>
                    <td><a href="javascript:void(0);" @onclick="() => NavigateToScorePage(category.Id)">@category.Name</a></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<CategoryModel> categories;

    protected override async Task OnInitializedAsync()
    {
        categories = await CategoryService.GetAllCategoriesAsync();
    }

    private void NavigateToScorePage(int categoryId)
    {
        NavigationManager.NavigateTo($"Pages/Score/{categoryId}");
    }
}




